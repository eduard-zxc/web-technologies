@{
     Layout = "~/Views/Shared/_Layout.cshtml";
     ViewBag.Title = "Login";
}

@using System.Web.Optimization
@model eUseControl.Web.Models.UserLogin
<!-- LOG IN -->
<section class="login section" id="login">
     <div class="container">
          <div class="row">


               <!-- Column for Log In Form -->
               <div class="col-lg-5 col-md-6 col-12">
                    <h2 class="mb-4 pb-2" data-aos="fade-up" data-aos-delay="200">Log In</h2>

                    <form action="#" method="post" class="signin-form webform" data-aos="fade-up" data-aos-delay="400"
                          role="form">
                         <input type="text" class="form-control" name="signin-username" placeholder="Username">

                         <input type="password" class="form-control" name="signin-password" placeholder="Password">

                         <button type="submit" class="form-control" id="submit-button" name="submit">Log In</button>

                         <p class="mt-3 mb-0">Don't have an account yet? <a href="@Url.Action("Index","SignUp")">Sign up</a>.</p>
                    </form>
               </div>

          </div>
     </div>
</section>