@model IEnumerable<eUseControl.Web.Models.Subscription>

@{
     ViewBag.Title = "Index";
}

<h2>Index</h2>
<section class="subscription" id="subscription" style="padding-top: 100px;">
     <div class="container">
          <div class="row">
               <div class="col-lg-12 col-12 text-center mb-5">
                    <h6 data-aos="fade-up">Get A Perfect Body</h6>

                    <h2 data-aos="fade-up" data-aos-delay="200">Our Training Classes</h2>
               </div>
               @foreach (var item in Model)
               {
                    <div class="mt-5 mt-lg-0 mt-md-0 col-lg-4 col-md-6 col-12" data-aos="fade-up" data-aos-delay="500">
                         <div class="class-thumb">
                              <img src="@item.ImageUrl" class="img-fluid" alt="Class">
                              <div class="class-info">
                                   <h3 class="mb-1"> @Html.DisplayFor(modelItem => item.Name)</h3>

                                   <span><strong>Trained by</strong> - Aerobics Trainer</span>

                                   <span class="class-price">$ @Html.DisplayFor(modelItem => item.Price)</span>
                                   <a href="@Url.Action("Details","Subscription",new {id =item.Id})" class="btn custom-btn bg-color mt-3" data-aos="fade-up" data-aos-delay="300"><center>Details</center></a>
                              </div>
                         </div>
                    </div>
               }
          </div>
     </div>
     <button type="submit" class="form-control" id="submit-button" name="submit" onclick="location.href='@Url.Action("Create","Subscription")'">Create</button>
</section>

