@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Home";
}

@using System.Web.Optimization
@model List<eUseControl.Web.Models.SubscriptionDuration>
<a id="bgndVideo" class="player"
   data-property="{videoURL:'https://www.videvo.net/stock-video-footage/gym/',showYTLogo:false, showAnnotations: false, showControls: false, cc_load_policy: false, containment:'#home-section',autoPlay:true, mute:true, startAt:255, stopAt: 271, opacity:1}">
</a>

<div class="intro-section" id="home-section" style="background-color: #ccc;">
    <div class="container">

        <div class="row align-items-center">
            <div class="col-lg-12 mx-auto text-center" data-aos="fade-up">
                <h1 class="mb-3">Fitness Helps Me Feel Better</h1>
                <p class="lead mx-auto desc mb-5">Transform your body, empower your mind, and embrace the strength within.</p>
                <p class="text-center">
                    <a href="#" class="btn btn-outline-white py-3 px-5">Get Started</a>
                </p>
            </div>
        </div>

    </div>
</div>

<div class="owl-carousel nonloop-block-14 block-14" data-aos="fade">
    @foreach (var item in Model)
    {
        <div class="slide">
            <div class="ftco-feature-1">
                <span class="icon flaticon-fit"></span>
                <div class="ftco-feature-1-text">
                    <h2>@item.Name</h2>
                    <p>Pretul : @item.Price</p>
                    <p>Durata: @item.Duration</p>
                </div>
            </div>

        </div>
    }
</div>
<button type="submit" class="form-control" id="submit-button" name="submit" onclick="location.href='@Url.Action("CreateSubscriptionDuration","Subscription")'">Create</button>


<div class="bgimg" style="background-image: url('../../assets/images/bg_2.jpg');" data-stellar-background-ratio="0.5">

    <div class="container">
        <div class="row align-items-center justify-content-center text-center">
            <div class="col-md-7">
                <h2 class="">Get The Result You Want</h2>
                <p class="lead mx-auto desc mb-5">Our gym provides you with the tools and resources you need to reach your desired outcome, be it a sculpted physique, improved athleticism, or a healthier lifestyle.</p>
            </div>
        </div>
    </div>

</div>



<div class="bgimg" style="background-image: url('../../assets/images/bg_1.jpg');" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">
            <div class="col-md-7">
                <h2 class="">Your Fitness Partner Where Ever You Are</h2>
                <p class="lead mx-auto desc mb-5">We believe that fitness should be accessible and convenient, which is why we strive to be your trusted fitness partner, offering support, motivation, and accountability wherever you are. Our team of experienced trainers and coaches are available to answer your questions, provide guidance, and keep you motivated on your fitness journey.</p>
            </div>
        </div>
    </div>
</div>

<div class="bgimg" style="background-image: url('../../assets/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">
            <div class="col-md-7">
                <h2 class="">Every Step Counts</h2>
                <p class="lead mx-auto desc mb-5">We believe that progress is built upon consistent action and that every step you take matters.</p>
            </div>
        </div>
    </div>
</div>