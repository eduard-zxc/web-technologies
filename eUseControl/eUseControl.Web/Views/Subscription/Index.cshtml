@model IEnumerable<eUseControl.Web.Models.Subscription>

@{
    ViewBag.Title = "Index";
}

<section class="subscription" id="subscription" data-aos="fade" style="padding-top: 100px; ">
    <div class="container">
        <div class="row justify-content-center text-center mb-5">
            <div class="col-md-8  section-heading">
                <span class="subheading">Fitness Class</span>
                <h2 class="heading mb-3">Our Classes</h2>
                <p>
                    Join out special Training Program
                </p>
            </div>
        </div>
    </div>

    <div class="class-item d-flex align-items-center" style="width: 100px;">
        <button type="submit" class="form-control" id="submit-button" name="submit" onclick="location.href='@Url.Action("Create","Subscription")'">Create</button>
    </div>
    <div class="owl-carousel nonloop-block-14 block-14">
        @foreach (var item in Model)
        {
            <div class="ftco-feature-1">
                <div class="class-item-text">
                    <img src="@item.ImageUrl" class="img-fluidz" alt="Class">
                    <h2><a>@Html.DisplayFor(modelItem => item.Name)</a></h2>
                    <span><strong>Trained by</strong> - Aerobics Trainer</span>
                    <span class="class-price">$ @Html.DisplayFor(modelItem => item.Price)</span>
                    <a href="@Url.Action("Details", "Subscription", new { id = item.Id })" class="btn custom-btn bg-color mt-3" data-aos-delay="300"><center>Details</center></a>
                </div>
            </div>
        }
    </div>

</section>
