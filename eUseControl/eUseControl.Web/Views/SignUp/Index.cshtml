@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "SignUp";

}
@using System.Web.Optimization
@using eUseControl.Domain.Enums
@model eUseControl.Web.Models.UserSignUp
<!-- SIGN UP -->
<section>
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-6 col-md-4 col-lg-3 col-xl-7">
            <div class="card shadow-2-strong" data-aos="fade-up" style="border-radius: 1rem;">
                <div class="card-body p-5">
                    <div class="site-section bg-light contact-wrap" id="contact-section">
                        <div class="container">

                            <div class="row justify-content-center text-center mb-5">
                                <div class="col-md-8  section-heading">
                                    <span class="subheading">Get In Touch</span>
                                    <h2 class="heading mb-3">Sign Up</h2>
                                </div>
                            </div>

                            <div class="row justify-content-center">
                                <div class="col-md-4">
                                    @using (Html.BeginForm("Index", "SignUp", FormMethod.Post, new { @id = "RegisterForm" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <form method="post" data-aos="fade">
                                            <div class="form-group row">

                                                @Html.TextBoxFor(m => m.Username, new
                                                {
                                                     type = "text",
                                                     placeholder = "Username",
                                                     title = "Please enter  Username",
                                                     value = "",
                                                     name = "username",
                                                     id = "username",
                                                     @class = "form-control"
                                                })
                                                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "validation-error" })

                                            </div>
                                            <div class="form-group row">
                                                @Html.TextBoxFor(m => m.Email, new
                                                {
                                                     type = "email",
                                                     placeholder = "Email",
                                                     title = "Please enter your email",
                                                     value = "",
                                                     name = "email",
                                                     id = "email",
                                                     @class = "form-control"
                                                })
                                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "validation-error" })

                                            </div>
                                            <div class="form-group row">
                                                @Html.PasswordFor(m => m.Password, new
                                                {
                                                     type = "password",
                                                     @class = "form-control",
                                                     title = "Please enter your password",
                                                     placeholder = "Password",
                                                     name = "passowrd"
                                                })
                                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "validation-error" })

                                            </div>
                                            <div class="form-group row">
                                                @Html.PasswordFor(m => m.ConfirmPassword, new
                                                {
                                                     type = "password",
                                                     @class = "form-control",
                                                     title = "Please enter your password",
                                                     placeholder = "Password",
                                                     name = "passowrd"
                                                })
                                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "validation-error" })

                                                <label class="checkbox-inline">
                                                    @Html.CheckBoxFor(m => m.IsTrainer, new { id = "isTrainer" })
                                                    Sign up as a Trainer
                                                </label>
                                                <button type="submit" class="btn btn-primary py-3 px-5 btn-block" id="submit-button" name="submit">Sign Up</button>
                                                <p class="mt-3 mb-0">Already have an account? <a href="@Url.Action("Index", "Login")">Log In</a>.</p>
                                            </div>
                                        </form>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>