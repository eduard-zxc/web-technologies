@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Login";
}

@using System.Web.Optimization
@model eUseControl.Web.Models.UserLogin
<!-- LOG IN -->
<section class="site-section">

    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-6 col-md-4 col-lg-3 col-xl-7">
            <div class="card shadow-2-strong" data-aos="fade-up" style="border-radius: 1rem;">
                <div class="card-body p-5">
                    <div class="site-section bg-light contact-wrap" id="contact-section">
                        <div class="container">

                            <div class="row justify-content-center text-center mb-5">
                                <div class="col-md-8  section-heading">
                                    <span class="subheading">Get In Touch</span>
                                    <h2 class="heading mb-3">Log In</h2>
                                </div>
                            </div>

                            <div class="row justify-content-center">
                                <div class="col-md-4">
                                    @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @id = "LoginForm" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <form method="post" data-aos="fade">
                                            <div class="form-group row">
                                                @Html.LabelFor(m => m.Credential, new { @class = "pull-left checkbox-inline" })
                                                @Html.TextBoxFor(m => m.Credential, new
                                                {
                                                     @class = "form-control",
                                                     type = "text",
                                                     title = "Please enter your password",
                                                     placeholder = "Username",
                                                     value = "",
                                                     name = "password",
                                                })
                                            </div>
                                            <div class="form-group row">
                                                @Html.LabelFor(m => m.Password, new { @class = "pull-left checkbox-inline" })
                                                @Html.TextBoxFor(m => m.Password, new
                                                {
                                                     @class = "form-control",
                                                     type = "password",
                                                     title = "Please enter your password",
                                                     placeholder = "Password",
                                                     value = "",
                                                     name = "password",
                                                     id = "password"
                                                })
                                                @Html.ValidationSummary(false, "", new { @class = "validation-error" })
                                                <button type="submit" class="btn btn-primary py-3 px-5 btn-block" id="submit-button" name="submit">LogIn</button>

                                                <p class="mt-3 mb-0">Don't have an account yet? <a href="@Url.Action("Index", "SignUp")">Sign up</a>.</p>
                                            </div>
                                        </form>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

